/**
 * 16-bit incrementer:
 * out = in + 1
 */
CHIP Inc16 {
    IN in[16];
    OUT out[16];

    PARTS:
    Or16(a[0]=true , a[1..15]=false , out=one);
    Add16(a=in, b=one, out=out);
}